@using _14_dependency_injection.Models
@model List<Ogrenci>

@{
    ViewData["Title"] = "Öğrenci Listesi";
}

<div class="container mt-4">
    <h2 class="text-primary">Öğrenci Listesi (DI Örneği)</h2>
    <hr />

    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>No</th>
                <th>Ad Soyad</th>
                <th>Bölüm</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var ogrenci in Model)
            {
                <tr>
                    <td>@ogrenci.Id</td>
                    <td>@ogrenci.Ad</td>
                    <td>
                        <span class="badge bg-success">@ogrenci.Bolum</span>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">