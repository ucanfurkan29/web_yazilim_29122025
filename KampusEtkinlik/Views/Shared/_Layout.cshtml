<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Kampüs Etkinlik</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <nav class="navbar navbar-dark bg-dark mb-4">
        <div class="container">
            <a class="navbar-brand" href="/Etkinlik/Index">Kampüs Panosu</a>
            <div>
                <a href="/Etkinlik/Index" class="btn btn-outline-light btn-sm">Ana Sayfa</a>
                <a href="/Etkinlik/Ekle" class="btn btn-warning btn-sm">Yönetici Paneli</a>
            </div>
        </div>
    </nav>

    <div class="container">
        @if (TempData["Mesaj"] != null)
        {
            <div class="alert alert-success">@TempData["Mesaj"]</div>
        }

        @RenderBody()
    </div>

    <footer class="text-center mt-5 py-3 border-top">
        <small>&copy; 2026 Öğrenci Projesi</small>
    </footer>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>