{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",

  // ═══════════════════════════════════════════════════════════════
  // API AYARLARI
  // ═══════════════════════════════════════════════════════════════
  // YetkiKontrolMiddleware bu değeri kullanır.
  // /api/* ve /admin/* yollarına erişim için bu key gereklidir.
  // 
  // Test için Postman'da header ekle:
  // X-Api-Key: gizli-api-anahtari-12345
  // ═══════════════════════════════════════════════════════════════
  "ApiSettings": {
    "ApiKey": "gizli-api-anahtari-12345"
  }
}
